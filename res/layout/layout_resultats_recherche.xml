<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/backgroundgradient"
    android:minHeight="200dp" >

    <TextView
        android:id="@+id/res_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right|center"
        android:background="@color/bleuhopital5"
        android:paddingLeft="100dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="Resultats:"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/grisclaire"
        android:textColorHint="@color/vertjaune2" />

    <ListView
        android:id="@+id/liste_resultats_recherche"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/res_txt" >
    </ListView>

</RelativeLayout>